<section class="main">
	<h1>Embark Upon Your Saga</h1>
	<p>Login</p>
	<%= form_tag(session_path) do %>
	<%= label_tag(:email) %><br/>
	<%= text_field_tag(:email) %><br/>
	<%= label_tag(:password) %><br/>
	<%= password_field_tag(:password) %><br/>
	<%= submit_tag 'Login', class: "login_submit" %>
	<% end %>
	<p style="color: red"><%= flash[:error] %></p>
	<p style="color: green"><strong><%= flash[:notice] %></strong></p>
	<p><%= link_to('Sign up', new_user_path) %></p>
</section>
