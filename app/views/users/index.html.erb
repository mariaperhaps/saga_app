<section class="main">
  <h1>Listing users</h1>

  <table>
    <thead>
      <tr>
        <th>Image url</th>
        <th>Name</th>

        <th></th>

        <th></th>
        <th>City</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>State</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>Country</th>
        <!-- <th colspan="3"></th> -->

    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><img src="<%= user.image_url %>"width="400" margin="50px"></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= link_to(user.name, user_path(user.id)) %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= user.city %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= user.state %></td>
          <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
          <td><%= user.country %></td>
          <td><%= link_to 'Show', user %></td>


        </tr>
      <% end %>
      <br>
    </tbody>
  </table>

  <br>


</section>

</section>

